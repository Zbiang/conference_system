.conference-container {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}

.title-detail {
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
}

.conference-head {
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
}

.conference-title {
  font-size: 35rpx;
  color: #000;
  margin-top: 8rpx; 
}

.conference-time {
  margin-top: 15rpx;
  font-size: 25rpx;
}

.conference-ing {
  margin-top: 20rpx;
  font-size: 20rpx;
}

.hr {
  margin-top: 20rpx;
  height:1px;
  width: 100%;
  background-color: #d9d9d9;
}

.row {
  display: flex;
  flex-direction: row;
}

.row-right {
  margin-top: 15rpx;
  font-size: 24rpx;
  color: #f21146;
  margin-left: 20rpx;
}